{
  "name": "sumer-protocol",
  "version": "1.0.0",
  "description": "Sumer contracts",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run ./scripts/deploy/base/Setup.ts",
    "test": "npm run build && npx hardhat test",
    "coverage": "npm run build && npx cross-env NODE_OPTIONS=\"--max_old_space_size=8192\" hardhat coverage --temp artifacts --max-memory 4096",
    "slither": "npm run build && slither .",
    "lint": "tslint -p tsconfig.json",
    "lint-fix": "tslint --fix -p tsconfig.json",
    "genConfig": "node genCompoundConfig/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meterio/sumer-project.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "polygon",
    "bsc",
    "smart",
    "contracts"
  ],
  "license": "MIT",
  "homepage": "https://sumer.money/",
  "dependencies": {
    "@inquirer/prompts": "^3.1.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/contracts": "^4.8.2",
    "@openzeppelin/contracts-upgradeable": "^4.8.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.1",
    "@pythnetwork/pyth-sdk-solidity": "^2.2.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-string": "^1.4.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.3.1",
    "ethereumjs-tx": "^2.1.2",
    "ethers": "^6.9.1",
    "hardhat": "^2.10.2",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "^2.7.0",
    "inquirer": "^9.2.11",
    "mocha": "^8.4.0",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3",
    "yargs": "^17.2.1"
  }
}
